@model Tuple<WebLibrary.Models.Instructor, WebLibrary.Models.Learner>;
@{
    ViewData["Title"] = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="~/css/site.css" />
<link rel="stylesheet" href="~/fonts/boxicons.css" />

@{
    string role = ViewBag.Role;
}

<div class="container-fluid mt-2 mb-3 p-0">
    <div class="card mb-4 bg-theme">
        <div class="card-body d-flex" style="justify-content: space-between;">
            <div class="d-flex align-items-start align-items-sm-center gap-4 ml-5">
                <div class="avatar-user mr-2 mt-5">
                    <img class="avatar-initial rounded-circle bg-label-warning" src="~/img/1.png">
                </div>
                <div class="id-text form-group ml-2">
                    @{
                        if(role.Equals("instructor")){
                            <label class="text-theme font-weight-bold">InstructorId</label>
                            <input value="@Model.Item1.InstructorId" class="form-control" style="width: 80%;" disabled/>
                        }else if(role.Equals("learner")){
                            <label class="text-theme font-weight-bold">LearnerId</label>
                            <input value="@Model.Item2.LearnerId" class="form-control" style="width: 80%;" disabled/>
                        }
                    }
                </div>
                <div class="btn-next mt-5 d-flex">
                    @if (role.Equals("instructor"))
                    {
                        <form method="post" action="/Admin/Previous">
                            <input type="hidden" name="id" value="@Model.Item1.InstructorId" />
                            <input type="hidden" name="role" value="@role" />
                            <button type="submit" class="btn btn-primary text-white"><i class='bx bx-left-arrow-alt'></i></button>
                        </form>
                        <form class="ml-3" method="post" action="/Admin/Next">
                            <input type="hidden" name="id" value="@Model.Item1.InstructorId" />
                            <input type="hidden" name="role" value="@role" />
                            <button type="submit" class="btn btn-primary text-white"><i class='bx bx-right-arrow-alt'></i></button>
                        </form>
                    }
                    else if (role.Equals("learner"))
                    {
                        <form method="post" action="/Admin/Previous">
                            <input type="hidden" name="id" value="@Model.Item2.LearnerId" />
                            <input type="hidden" name="role" value="@role" />
                            <button type="submit" class="btn btn-primary text-white"><i class='bx bx-left-arrow-alt'></i></button>
                        </form>
                        <form class="ml-3" method="post" action="/Admin/Next">
                            <input type="hidden" name="id" value="@Model.Item2.LearnerId" />
                            <input type="hidden" name="role" value="@role" />
                            <button type="submit" class="btn btn-primary text-white"><i class='bx bx-right-arrow-alt'></i></button>
                        </form>
                    }
                </div>
            </div>
        </div>
        <div class="container-fluid ml-5">
            <div class="row">
                <div class="mb-3 col-md-6">
                    <div class="form-group">
                        @{
                            if(role.Equals("instructor")){
                                <label class="text-theme font-weight-bold">FirstName</label>
                                <input value="@Model.Item1.FirstName" class="form-control" style="width: 80%;" disabled/>
                            }else if(role.Equals("learner")){
                                <label class="text-theme font-weight-bold">FirstName</label>
                                <input value="@Model.Item2.FirstName" class="form-control" style="width: 80%;" disabled/>
                            }
                        }
                    </div>
                </div>
                <div class="mb-3 col-md-6">
                    <div class="form-group">
                            @{
                                if(role.Equals("instructor")){
                                    <label class="text-theme font-weight-bold">LastName</label>
                                    <input value="@Model.Item1.LastName" class="form-control" style="width: 80%;" disabled/>
                                }else if(role.Equals("learner")){
                                    <label class="text-theme font-weight-bold">LastName</label>
                                    <input value="@Model.Item2.LastName" class="form-control" style="width: 80%;" disabled/>
                                }
                            }
                    </div>
                </div>
                <div class="mb-3 col-md-6">
                    <div class="form-group">
                        @{
                            if(role.Equals("instructor")){
                                <label class="text-theme font-weight-bold">Gender</label>
                                <input value="@Model.Item1.Gender" class="form-control" style="width: 80%;" disabled/>
                            }else if(role.Equals("learner")){
                                <label class="text-theme font-weight-bold">Gender</label>
                                <input value="@Model.Item2.Gender" class="form-control" style="width: 80%;" disabled/>
                            }
                        }
                    </div>
                </div>
                <div class="mb-3 col-md-6">
                    <div class="form-group">
                        @{
                            if(role.Equals("instructor")){
                                <label class="text-theme font-weight-bold">Country</label>
                                <input value="@Model.Item1.Country" class="form-control" style="width: 80%;" disabled/>
                            }else if(role.Equals("learner")){
                                <label class="text-theme font-weight-bold">Country</label>
                                <input value="@Model.Item2.Country" class="form-control" style="width: 80%;" disabled/>
                            }
                        }
                    </div>
                </div>
                <div class="mb-3 col-md-6">
                    <div class="form-group">
                        @{
                            if(role.Equals("instructor")){
                                <label class="text-theme font-weight-bold">Email</label>
                                <input value="@Model.Item1.Email" class="form-control" style="width: 80%;" disabled/>
                            }else if(role.Equals("learner")){
                                <label class="text-theme font-weight-bold">Email</label>
                                <input value="@Model.Item2.Email" class="form-control" style="width: 80%;" disabled/>
                            }
                        }
                    </div>
                </div>
                <div class="mb-3 col-md-6">
                    <div class="form-group">
                        @{
                            if(role.Equals("instructor")){
                                <label class="text-theme font-weight-bold">PhoneNumber</label>
                                <input value="@Model.Item1.PhoneNumber" class="form-control" style="width: 80%;" disabled/>
                            }else if(role.Equals("learner")){
                                <label class="text-theme font-weight-bold">PhoneNumber</label>
                                <input value="@Model.Item2.PhoneNumber" class="form-control" style="width: 80%;" disabled/>
                            }
                        }
                    </div>
                </div>
                <div class="mb-3 col-md-6">
                    <div class="form-group">
                        @{
                            if(role.Equals("instructor")){
                                <label class="text-theme font-weight-bold">Birthday</label>
                                <input value="@Model.Item1.Birthday.Value.ToShortDateString()" asp-format="{0:dd-MM-yyyy}" class="form-control" style="width: 80%;" disabled/>
                            }else if(role.Equals("learner")){
                                <label class="text-theme font-weight-bold">Birthday</label>
                                <input value="@Model.Item2.Birthday.Value.ToShortDateString()" asp-format="{0:dd-MM-yyyy}" class="form-control" style="width: 80%;" disabled/>
                            }
                        }
                    </div>
                </div>
                <div class="mb-3 col-md-6">
                    <div class="form-group">
                        @{
                            if(role.Equals("instructor")){
                                <label class="text-theme font-weight-bold">Registration Date</label>
                                <input value="@Model.Item1.RegistrationDate.Value.ToShortDateString()" asp-format="{0:dd-MM-yyyy}" class="form-control" style="width: 80%;" disabled/>
                            }else if(role.Equals("learner")){
                                <label class="text-theme font-weight-bold">Registration Date</label>
                                <input value="@Model.Item2.RegistrationDate.Value.ToShortDateString()" asp-format="{0:dd-MM-yyyy}" class="form-control" style="width: 80%;" disabled/>
                            }
                        }
                    </div>
                </div>
                @* <div class="mb-3 col-md-6">
                    <div class="form-group">
                        <label asp-for="Introduce" class="text-theme font-weight-bold"></label>
                        <textarea asp-for="Introduce" class="form-control" style="width: 80%;" rows="4" disabled></textarea>
                    </div>
                </div> *@
                <div class="mb-3 col-md-6">
                    <div class="form-group">
                        @{
                            if(role.Equals("instructor")){
                                <label class="text-theme font-weight-bold">Status</label>
                                <input value="@Model.Item1.Status" class="form-control" style="width: 80%;" disabled/>
                            }else if(role.Equals("learner")){
                                <label class="text-theme font-weight-bold">Status</label>
                                <input value="@Model.Item2.Status" class="form-control" style="width: 80%;" disabled/>
                            }
                        }
                    </div>
                </div>
            </div>
        </div>
        @{
            if(role.Equals("instructor")){
                <a asp-action="Instructor" class="btn btn-secondary ml-5 mb-5" style="width: 8rem;">Back</a>
            }else if(role.Equals("learner")){
                <a asp-action="Learner" class="btn btn-secondary ml-5 mb-5" style="width: 8rem;">Back</a>
            }
        }
    </div>
</div>

